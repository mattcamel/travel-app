<% include ./partials/header %>

<div class="ui main text container">
	<div class="column">
		<div class="ui grid">
			<div class="two column row">
				<div class="left floated left left aligned column">
					<h3 class="ui dividing header">Edit destination</h3>
				</div>
				<div class="right floated right aligned column">
					<form id="deleteForm" action="/id/<%= foundPost._id %>?_method=DELETE" method="POST">
						<button class="ui red button">Delete Post</button>
					</form>
				</div>
			</div>
		</div>
		 
		<form class="ui inverted form" action="/id/<%= foundPost._id %>?_method=PUT" method="POST">
			<div class="field">
				<label>Location</label>
				<div class="three fields">
					<div class="field">
						<input type="text" name="post[site]" value="<%= foundPost.site %>">
					</div>
					<div class="field">
						<input type="text" name="post[region]" value="<%= foundPost.region %>">
					</div>
					<div class="field">
						<input type="text" name="post[country]" value="<%= foundPost.country %>">
					</div>
				</div>
			</div>
			<div class="field">
				<label>Tag</label>
				<select class="ui fluid dropdown" name="post[tag]">
				<option value="<%= foundPost.tag %>"><%= foundPost.tag %></option>
				<option value="Adventure">Adventure</option>
				<option value="Art">Art</option>
				<option value="Culture">Culture</option>
				<option value="Design">Design</option>
				<option value="Food">Food</option>
				<option value="Hike">Hike</option>
				<option value="History">History</option>
				<option value="Nature">Nature</option>
				<option value="Scuba">Scuba</option>
				<option value="Other">Other</option>
				</select>
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="post[image]" value="<%= foundPost.image %>">
			</div>
			<div class="field">
				<label>Content</label>
				<textarea name="post[content]"><%- foundPost.content %></textarea>
			</div>
			<div class="field">
				<label>Link to more info</label>
				<input type="text" name="post[link]" value="<%= foundPost.link %>">
			</div>
			<input type="submit" class="ui secondary button">
		</form>
	</div>
</div>

<% include ./partials/footer %>